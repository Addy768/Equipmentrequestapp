@model EquipmentRequestApp.Models.Request
<!-- request form-->

<h1 class="text-center text-dark mt-4">Equipment Request Form</h1>

<form asp-action="RequestForm" method="post" class="bg-light p-4 rounded">
    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold text-dark">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold text-dark">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="font-weight-bold text-dark">Phone</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role" class="font-weight-bold text-dark">Role</label>
        <select asp-for="Role" class="form-control">
            <option value="Student">Student</option>
            <option value="Professor">Professor</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipment" class="font-weight-bold text-dark">Equipment</label>
        <select asp-for="Equipment" asp-items="Html.GetEnumSelectList<EquipmentRequestApp.Models.EquipmentType>()" class="form-control"></select>
        <span asp-validation-for="Equipment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RequestDetails" class="font-weight-bold text-dark">Request Details</label>
        <textarea asp-for="RequestDetails" class="form-control" rows="4"></textarea>
        <span asp-validation-for="RequestDetails" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration" class="font-weight-bold text-dark">Duration (Days)</label>
        <input asp-for="Duration" type="number" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Submit Request</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(135deg, #6a1b9a, #8e24aa, #9c27b0);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Roboto', sans-serif;
    }

    /* Change all text elements to black */
    .text-dark {
        color: #000 !important;
    }

    form {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        margin: 20px auto;
    }

    .form-control {
        border-radius: 6px;
        padding: 12px;
        margin-bottom: 15px;
    }

    .btn-block {
        width: 100%;
        padding: 10px;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .p-4 {
        padding: 1.5rem;
    }
</style>
