@model IEnumerable<EquipmentRequestApp.Models.Equipment>

<style>
    table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
        background: rgba(128, 0, 128, 0.1); /* Light purple background */
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 15px;
        text-align: left;
        color: white;
        border-bottom: 1px solid rgba(128, 0, 128, 0.2); /* Purple border */
    }

    th {
        background-color: rgba(75, 0, 130, 0.7); /* Dark purple background for headers */
        font-size: 1.2rem;
        text-transform: uppercase;
    }

    tr:hover {
        background-color: rgba(147, 112, 219, 0.3); /* Hover effect with lighter purple */
    }

    h1 {
        text-align: center;
        margin-top: 2rem;
        font-size: 2.5rem;
        color: purple; /* Purple color for heading */
    }
</style>

<h1>All Equipment</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Description</th>
            <th>Availability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Type</td>
                <td>@item.Description</td>
                <td>@(item.IsAvailable ? "Available" : "Not Available")</td>
            </tr>
        }
    </tbody>
</table>
