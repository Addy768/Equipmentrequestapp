@model IEnumerable<EquipmentRequestApp.Models.Request>

<h2 class="text-center text-light mt-4">Submitted Requests</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center bg-purple text-white">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Equipment</th>
                <th>Request Details</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.Name</td>
                    <td>@request.Email</td>
                    <td>@request.Phone</td>
                    <td>@request.Role</td>
                    <td>@request.Equipment</td>
                    <td>@request.RequestDetails</td>
                    <td>@request.Duration</td>
                    <td>@request.Status</td>
                    <td>
                        @if (request.Status == EquipmentRequestApp.Models.RequestStatus.Pending)
                        {
                            <form method="post" asp-controller="Admin" asp-action="Accept" asp-route-id="@request.Id" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">Accept</button>
                            </form>
                            <form method="post" asp-controller="Admin" asp-action="Deny" asp-route-id="@request.Id" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    
    body {
        background-color: #6a1b9a; 
        color: #fff; 
    }

   
    h2 {
        color: #f1f1f1; 
    }

    /* Table styling */
    .bg-purple {
        background-color: #6a1b9a;
    }

    
    .thead-dark {
        background-color: #4a148c; 
        color: #fff; 
    }

    
    .table-responsive {
        margin: 20px 0;
    }

    th, td {
        padding: 12px;
        text-align: center;
    }

    
    .btn-sm {
        padding: 5px 10px;
    }
</style>
